
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Scripts.Render("~/bundles/jquery")
<script type="text/javascript" src="~/Scripts/Vuelo/Reservacion.js"></script>

<div class="text-lg-start">
    <h2>Reservaciones</h2>
    <h5>Listas de Reservaciones</h5>
</div>
<hr />

<div class="text-center">
    <button class="btn btn-success m-3" onclick="showModal()">Agregar</button>
</div>
<div class="col-md-12">

    <table id="tablaReservado" class="table table-hover" border="1">
        <thead class="table-dark">
            <tr>
                <th class="text-center" scope="col">Nombre</th>
                <th class="text-center" scope="col">Apellido Paterno</th>
                <th class="text-center" scope="col">Numero Vuelo</th>
                <th class="text-center" scope="col">Origen</th>
                <th class="text-center" scope="col">Destino</th>
                <th class="text-center" scope="col">Fecha salida</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" onclick="modalClose()">×</button>
                <h4 class="modal-title">Formulario Empleado</h4>
            </div>

            <div class="modal-body">
                <form>
                    <div class="form-group d-flex justify-content-center m-2">
                        <label>Selecciona el Usuario</label>
                        <select id="ddlUsuario">
                            <option value="0">Selecciona un valor</option>
                        </select>
                    </div>
                    <div class="form-group d-flex justify-content-center m-2">
                        <label>Selecciona el destino</label>
                        <select id="ddlDestino">
                            <option value="0">Selecciona un valor</option>
                        </select>
                    </div>
                    @*<div class="form-group d-flex justify-content-center m-2">
                        <label>Selcciona la fecha</label>
                        <select id="ddlFecha">
                            <option value="0">Selecciona un valor</option>
                        </select>
                    </div>*@
                </form>
            </div>


            <div class="modal-footer">
                <button type="button" class="btn btn-success m-1" id="btnUpdate" onclick="Add()">Guardar</button>
                <button type="button" class="btn btn-danger m-1" data-dismiss="modal" onclick="modalClose()">Cancelar</button>
            </div>
        </div>
    </div>
</div>


