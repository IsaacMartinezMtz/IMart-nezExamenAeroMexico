
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Scripts.Render("~/bundles/jquery")
<script type="text/javascript" src="~/Scripts/Vuelo/Vuelo.js"></script>

<div class="text-lg-start">
    <h2>Vuelos</h2>
    <h5>Listas de Vuelos</h5>
</div>
<hr />

<form>
    <div class="container overflow-hidden text-center">
        <div class="row gx-5">
            <div class="col">
                <div class="p-3">
                    <label for="start">Fecha de Inicio</label>
                    <input type="date" id="txtFechaInicio" name="trip-start" @*value="2018-07-22"*@ @*min="2018-01-01" max="2018-12-31"*@ />
                </div>
            </div>
            <div class="col">
                <div class="p-3 ">
                    <label for="start">Fecha de Final</label>
                    <input type="date" id="txtFechaFin" name="trip-start" @*value="2018-07-22"*@ @*min="2018-01-01" max="2018-12-31"*@ />
                </div>
            </div>
        </div>
    </div>
</form>
<center>
    <button type="button" class="btn btn-success m-1" id="btnUpdate" onclick="Busqueda()">Guardar</button>
</center>
<hr />
<div class="col-md-12">

    <table id="tablaVuelo" class="table table-hover" border="1">
        <thead class="table-dark">
            <tr>
                <th class="text-center" scope="col">Número Vuelo</th>
                <th class="text-center" scope="col">Origen</th>
                <th class="text-center" scope="col">Destino</th>
                <th class="text-center" scope="col">Fecha salida</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

